using System;
using System.Collections.Generic;
using System.Text;

namespace Feng.Product.Model
{
    public class AddAuthProductModel {
        
        /// <summary>
        /// 产品名称
        /// </summary>
        public string goodsName { get; set; }

        /// <summary>
        /// 广告语
        /// </summary>
        public string shortDesc { get; set; }

        /// <summary>
        /// 产品分类编号
        /// </summary>
        public string categoryId { get; set; }

        /// <summary>
        /// 是否上架
        /// </summary>
        public bool isPublish { get; set; }

        /// <summary>
        /// 产品描述
        /// </summary>
        public string description { get; set; }
        /// <summary>
        /// 属性编号+属性值编号集合
        /// </summary>
        public List<AddProductAttrModel> attrList { get; set; }

        /// <summary>
        /// 规格信息
        /// </summary>
        public List<AddProductSkuModel> skuList { get; set; }
    }

    public class AddProductAttrModel {
        /// <summary>
        /// 属性编号
        /// </summary>
        public string attributeId { get; set; }
        /// <summary>
        /// 属性值编号
        /// </summary>
        public List<string> attributeValues { get; set; }
    }

    public class AddProductSkuModel {
        /// <summary>
        /// 销售价格
        /// </summary>
        public decimal price { get; set; }
        /// <summary>
        /// 属性字符串
        /// </summary>
        public string attrJson { get; set; }
        /// <summary>
        /// 周期,单位：天
        /// </summary>
        public int periods { get; set; }
    }

    public class QueryAuthProductModel {
        /// <summary>
        /// 产品编号
        /// </summary>
        public string productId { get; set; }
        /// <summary>
        /// 产品名称
        /// </summary>
        public string productName { get; set; }
        /// <summary>
        /// 是否上架
        /// </summary>
        public bool isPublish { get; set; }
        /// <summary>
        /// 添加时间
        /// </summary>
        public DateTime addTime { get; set; }
    }


}
